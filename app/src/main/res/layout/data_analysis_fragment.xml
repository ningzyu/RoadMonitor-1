<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<include layout="@layout/toolbar_layout"/>
    <!--折线图控件-->
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/charts_container"
            android:layout_height="wrap_content">
           <include layout="@layout/chart_layout"/>
        </LinearLayout>
    </ScrollView>
    <!--数据关联-->
    <LinearLayout
        android:id="@+id/layout_correlation"

        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/layout_style"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="130dp"
                android:text="监测因素"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryTranslucent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:id="@+id/textView8" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/tv1_data" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/layout_style"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="130dp"
                android:text="监测位置"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryTranslucent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:id="@+id/textView6" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/tv2_data" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layout_3"
            android:background="@drawable/layout_style"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="130dp"
                android:text="关联监测因素"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryTranslucent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/tv3_data" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layout_4"
            android:background="@drawable/layout_style"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="130dp"
                android:text="关联检测位置"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryTranslucent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:id="@+id/textView9" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/tv4_data" />



            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/layout_style"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="130dp"
                android:text="时间"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryTranslucent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/tv5_data" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>